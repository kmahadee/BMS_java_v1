<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark"
            android:layout_marginEnd="12dp" />

        <!-- Icon -->
        <ImageView
            android:id="@+id/transferIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            android:padding="8dp"
            android:background="@drawable/circle_background"
            app:tint="#2196F3" />

        <!-- Transfer Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/transferAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: 1234567890"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/transferDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money Transfer"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/transferDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 19, 10:30 AM"
                android:textSize="11sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/transferAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- $100.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>