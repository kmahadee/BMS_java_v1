<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Customer Email -->
        <TextView
            android:id="@+id/customerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="customer@example.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:drawableTint="#1976D2" />

        <!-- Requested Amount -->
        <TextView
            android:id="@+id/requestedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Requested: $5,000.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="8dp"
            android:drawableTint="#2E7D32" />

        <!-- Request Date -->
        <TextView
            android:id="@+id/requestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Requested on: Jan 18, 2026 at 10:30 AM"
            android:textSize="13sp"
            android:textColor="#757575"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:drawableTint="#757575" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/rejectLoanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/approveLoanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="#FFFFFF"
                android:backgroundTint="#388E3C"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>